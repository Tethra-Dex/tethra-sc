# Tethra DEX - Environment Variables Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# ============================================
# RPC ENDPOINTS
# ============================================
# Get free API keys from:
# - Alchemy: https://www.alchemy.com/
# - Infura: https://www.infura.io/
# - QuickNode: https://www.quicknode.com/

# Ethereum Mainnet
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Ethereum Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Arbitrum Mainnet
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Arbitrum Sepolia Testnet
ARBITRUM_SEPOLIA_RPC_URL=https://arb-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Local Anvil (for development)
LOCAL_RPC_URL=http://127.0.0.1:8545

# ============================================
# PRIVATE KEYS
# ============================================
# ⚠️ WARNING: NEVER share or commit these keys!
# ⚠️ Use test accounts for development/testnet
# ⚠️ Use hardware wallets (Ledger/Trezor) for mainnet

# Deployer private key (without 0x prefix or with it)
PRIVATE_KEY=

# ============================================
# CONTRACT ADDRESSES (Optional - for custom deployment)
# ============================================
# Leave empty to use deployer address for all roles

# Treasury address (receives 30% of TETRA and protocol fees)
TREASURY_ADDRESS=

# Team address (receives 10% of TETRA)
TEAM_ADDRESS=

# Price feed signer address (authorized to sign price data)
PRICE_SIGNER_ADDRESS=

# ============================================
# BLOCK EXPLORER API KEYS
# ============================================
# For contract verification
# Get API keys from:
# - Etherscan: https://etherscan.io/myapikey
# - Arbiscan: https://arbiscan.io/myapikey

ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
ARBISCAN_API_KEY=YOUR_ARBISCAN_API_KEY

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================
# Gas price in gwei (optional)
GAS_PRICE=50

# Gas limit (optional)
GAS_LIMIT=8000000

# ============================================
# USDC CONFIGURATION
# ============================================
# For mainnet/testnet, use real USDC address
# For local/testing, leave empty to deploy MockUSDC

# Mainnet USDC: 0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48
# Sepolia USDC: (use MockUSDC or get from faucet)
USDC_ADDRESS=

# ============================================
# PRICE FEED CONFIGURATION
# ============================================
# Exchange rate for USDCPaymaster (USDC per ETH in 18 decimals)
# Example: 2000e18 = 2000 USDC per 1 ETH
EXCHANGE_RATE=2000000000000000000000

# Premium percentage for gas payment (0-50)
# Example: 20 = 20% premium
GAS_PREMIUM=20

# ============================================
# INITIAL LIQUIDITY (for testing)
# ============================================
# Initial USDC liquidity to add to treasury (in USDC, 6 decimals)
INITIAL_LIQUIDITY=1000000000000

# Initial TETRA rewards for liquidity mining (in TETRA, 18 decimals)
INITIAL_MINING_REWARDS=1000000000000000000000000

# ============================================
# ASSET CONFIGURATION
# ============================================
# Default leverage limit for all assets (1-100)
DEFAULT_MAX_LEVERAGE=100

# Default liquidation threshold percentage (80-95)
DEFAULT_LIQUIDATION_THRESHOLD=90

# ============================================
# NOTES
# ============================================
# For local testing with Anvil:
# - Anvil provides 10 test accounts with private keys
# - Default private key (Account #0):
#   0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
# - Default address:
#   0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266
#
# To get Sepolia testnet ETH:
# - https://sepoliafaucet.com/
# - https://faucets.chain.link/
#
# To get test USDC on testnet:
# - Use MockUSDC.faucet() to get 1000 USDC
